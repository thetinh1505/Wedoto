@model Doan.Models.MD.WhishList

@{
    ViewBag.Title = "ShowToGetWhishList";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<head>
        <style>
            input {
                border-radius: 3px;
                margin-top: 2px;
            }

            button {
                margin-top: 2px;
            }
        </style>
    </head>

    <div style="margin-top:10em;"></div>
    <div class="ht__bradcaump__area bg-image--3">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="bradcaump__inner text-center">
                        <h2 class="bradcaump-title">Whish List</h2>
                        <nav class="bradcaump-content">
                            <a class="breadcrumb_item" href="index.html">Home</a>
                            <span class="brd-separetor">/</span>
                            <span class="breadcrumb_item active">Whish List</span>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @if (Model != null)
    {
    <div class="wishlist-area section-padding--lg bg__white">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="wishlist-content">
                    <form action="#">
                        <div class="wishlist-table wnro__table table-responsive">
                            <table>
                                <thead>
                                    <tr>
                                        <th class="product-remove"></th>
                                        <th class="product-thumbnail"></th>
                                        <th class="product-name"><span class="nobr">Product Name</span></th>
                                        <th class="product-price"><span class="nobr"> Unit Price </span></th>
                                        <th class="product-add-to-cart"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Items)
                                    {
                                        <tr>
                                            <td class="product-remove"> <a href="/WL/RemoveWhishList/@item._shopping_product.IDProduct">X</a></td>
                                            <td class="product-thumbnail"><a href="#"><img src="~/Images/@item._shopping_product.Image" style="width: 80px ;height: 100px; object-fit: cover" /></a></td>
                                            <td class="product-name"><a href="#">@Html.DisplayFor(model => item._shopping_product.ProductName)</a></td>
                                            <td class="product-price"><span class="amount">$@Html.DisplayFor(model => item._shopping_product.Price)</span></td>
                                            <td class="product-add-to-cart"><a  href="/ShoppingCart/AddtoCart/@item._shopping_product.IDProduct"> Add to Cart</a></td>
                                        </tr>
                                       
                                    }
                                    </tbody>
                            </table>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
    }
