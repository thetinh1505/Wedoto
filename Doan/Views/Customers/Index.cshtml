        $(document).ready(function () {
            $('#myTable').DataTable({
                responsive: true,
                "lengthMenu": [[5, 10, 20, 50, -1], [5, 10, 20, 50, "All"]]
            });
            //$('table').tblToExcel();
        });
    </script>
}