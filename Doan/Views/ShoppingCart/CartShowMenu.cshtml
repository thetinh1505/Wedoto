

@model Doan.Models.Dao.Cart

@{
    ViewBag.Title = "CartShowMenu";
    Layout = null;

}
@if (Model != null)
{
    <div class="minicart-content-wrapper">
        <div class="micart__close">
            <span>close</span>
        </div>
        <div class="items-total d-flex justify-content-between">
            <span>@Model.Total_Quantity() irems</span>
            <span>Cart Subtotal</span>
        </div>
        <div class="total_amount text-right">
            <span>$ @Model.Total_Money()</span>
        </div>
        <div class="mini_action checkout">
            <a class="checkout__btn" href="~/ShoppingCart/ShowToCart">Go to Checkout</a>
        </div>
        <div class="single__items">
            <div class="miniproduct">
                @foreach (var item in Model.Items)
                {
                    double total = Convert.ToDouble(item._shopping_product.Price * item._shopping_quantity);
                    <div class="item01 d-flex">
                        <div class="thumb">
                            <a href="product-details.html"><img src="~/Images/@item._shopping_product.Image" alt="product images"></a>
                        </div>
                        <div class="content" style="position: unset;">
                            <h6><a href="product-details.html">@Html.DisplayFor(model => item._shopping_product.ProductName)</a></h6>
                            <span class="prize">$total</span>
                            <div class="product_prize d-flex justify-content-between">
                                <span class="qun">Qty: @Html.DisplayFor(model => item._shopping_quantity) </span>
                                <ul class="d-flex justify-content-end">
                                    <li><a href="/ShoppingCart/RemoveCart/@item._shopping_product.IDProduct"><i class="zmdi zmdi-delete"></i></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        @*<div class="mini_action cart">
                <a class="cart__btn" href="cart.html">View and edit cart</a>
            </div>*@
    </div>
}
