@model IEnumerable<Doan.Models.BestSale>

@{
    ViewBag.Title = "BestSale";
    Layout = null;
}

<section class="wn__product__area brown--color pt--80  pb--30">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section__title text-center">
                    <h2 class="heading mb-3">Find your <span class="color--theme"> Best Products</span></h2>
                    @*<p class="sub-heading mb-5">
                        Good books, like good friends, are few and chosen; the more select, the more
                        enjoyable.
                    </p>*@
                </div>
            </div>
        </div>
        <!-- Start Single Tab Content -->
        <div class="furniture--4 border--round arrows_style owl-carousel owl-theme row mt--50">
            @foreach (var item in Model)
            {

                <div class="product product__style--3">
                    <div class="col-lg-3 col-md-4 col-sm-6 col-12">
                        <div class="product__thumb">
                            <a class="first__img" href="/Home/ProductDetail/@item.IDPro">
                                <img src="~/Images/@item.Image"
                                     alt="product image">
                            </a>
                            <a class="second__img animation1" href="/Home/ProductDetail/@item.IDPro">
                            </a>
                            <div class="hot__box">
                                <span class="hot-label">BEST SALLER</span>
                            </div>
                        </div>
                        <div class="product__content content--center">
                            <h4><a href="/Home/ProductDetail/@item.IDPro">robin parrish</a></h4>
                            <ul class="prize d-flex">
                                @Html.DisplayFor(model => item.Price)$

                            </ul>
                            <div class="action">
                                <div class="actions_inner">
                                    <ul class="add_to_links" style="margin-top: -25px;">
                                        <li>
                                            <a class="cart" href="/ShoppingCart/AddtoCart/@item.IDPro"><i class="bi bi-shopping-bag4"></i></a>
                                        </li>
                                        <li>
                                            <a class="wishlist" href="/ShoppingCart/AddtoCart/@item.IDPro">
                                                <i class="bi bi-shopping-cart-full"></i>
                                            </a>
                                        </li>
                                        <li> <a class="wishlist" href="/WL/AddtoWhishList/@item.IDPro"><i class="bi bi-heart-beat"></i></a></li>
                                        <li>
                                            <a data-toggle="modal" title="Quick View"
                                               class="quickview modal-view detail-link" href="/Home/ProductDetail/@item.IDPro">
                                                <i class="bi bi-search"></i>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>