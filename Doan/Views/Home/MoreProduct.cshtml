<div class="wn__related__product pt--80 pb--50">

    <div class="row mt--60">
        <div class="productcategory__slide--2 arrows_style owl-carousel owl-theme">
            <!-- Start Single Product -->
            @foreach (var item in Model)
            {
            <div class="col-lg-4 col-md-4 col-sm-6 col-12">
                <div class="product">
                    <div class="product__thumb">
                        <a class="first__img" href="/Home/ProductDetail/@item.IDProduct"><img src="~/Images/@item.Image"></a>
                        <a class="second__img animation1" href="/Home/ProductDetail/@item.IDProduct"><img src="~/Images/@item.MoreImage1"></a>
                        <div class="new__box">
                            <span class="new-label">New</span>
                        </div>
                        <ul class="prize position__right__bottom d-flex">
                            <li>$@Html.DisplayFor(modelItem => item.Price)</li>
                            <li class="old_prize">$@Html.DisplayFor(modelItem => item.Entryprice)</li>
                        </ul>
                     
                    </div>
                    <div class="product__content">
                        <h4><a href="/Home/ProductDetail/@item.IDProduct">@Html.DisplayFor(modelItem => item.ProductName)</a></h4>
                    </div>
                </div>
            </div>
            }
        </div>
    </div>
</div>