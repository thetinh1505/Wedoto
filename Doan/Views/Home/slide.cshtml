@model IEnumerable<Doan.Models.Slide>

@{
    ViewBag.Title = "slide";
    Layout = null;
}

    <div id="slider">
        <div class="slides">
            @foreach (var item in Model)
            {
           <div class="slider">
                <div class="legend"></div>
                <div class="content">
                    <div class="content-txt">
                        <h1></h1>
                        <h2>
                            @Html.DisplayFor(model => item.Description)
                        </h2>
                    </div>
                </div>
                <div class="image">
                    <img src="~/Images/@item.Image">
                </div>
            </div>
            }
        </div>
            
        <div class="switch">
            <ul>
                <li>
                    <div class="on"></div>
                </li>
                <li></li>
                <li></li>
                <li></li>
                <li></li>
            </ul>
        </div>
    </div>

